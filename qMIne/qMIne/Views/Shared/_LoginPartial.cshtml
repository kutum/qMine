@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            <a class="nav-link" title="Manage" href="@Url.Action("Index", "Manage")">@*<i class="far fa-user"></i>*@ Account</a>
        </li>
        <li class="nav-item active">
            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Exit</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item active">
            <a class="nav-link" id="registerLink" href="@Url.Action("Register", "Account")">Sign in</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" id="loginLink" href="@Url.Action("Login", "Account")">Log in</a>
        </li>
    </ul>
}
